@{
    ViewBag.Title = "Home Page";
}
<style>
    img {
        max-width: 100%;
        max-height: 100%;
    }

    .portrait {
        height: 30%;
        width: 30%;
        position: absolute;
        left: 60%
    }

    .row {
        padding-left: 60px;
        padding-bottom: 20px;
    }

</style>
<div class="content">
    @if (ViewBag.Message == "1")
    {
        <h1>Sveikiname užsiregistravus!</h1>
    }
    <div class="jumbotron">
        <div class="portrait">
            <img id="nuotrauka" src="~/Assets/images/happyComputer.png" />
        </div>

        <h1>Kompiuteriai</h1>
        <p class="lead">Ačiū,kad pasirinkote mus!</p>
        <p><a href='@Url.Action("ItemList", "Item")' class="btn btn-primary btn-lg">Ieškoti komponentų &raquo;</a></p>

    </div>
</div>